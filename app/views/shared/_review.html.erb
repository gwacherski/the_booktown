<div class="flexbox-container">
  <% if roteiro.reviews.present? %>
    <% roteiro.reviews.each do |review| %>
      <!-- Avatar and Username -->
      <div class="avatar-profile">
        <div class="avatar-review">
          <%= image_tag review.user.photo %>
        </div>
        <div class="username">
          <em><%= review.user.username %></em>
        </div>
      </div>

      <!-- Star Ratings -->
      <div class="somente-as-estrelas">
        <% 5.times do |i| %>
          <% if (i+1) <= review.rating %>
            <i class="fa-solid fa-star"></i>
          <% else %>
            <i class="fa-regular fa-star"></i>
          <% end %>
        <% end %>
        <em>~ This is the user rating ~</em>
      </div>

      <!-- Review Description -->
      <div class="review-description">
        <%= review.description %>
      </div>
    <% end %>
  <% end %>
</div>



<div>
  <%= link_to 'Leave a review!', new_book_roteiro_review_path(book_id: roteiro.book.id, roteiro_id: roteiro.id)%>
</div>
