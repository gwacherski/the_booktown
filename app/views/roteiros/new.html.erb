<div class="container">
  <%= simple_form_for(@roteiro) do |f| %>
    <%= f.input :title, placeholder: 'Give a title for your itinerary' %>
    <%= f.input :activity_description, placeholder: 'Add a detailed description' %>
    <%#= f.input :description, placeholder: 'Enter description' %>
    <%= f.input :location, placeholder: 'What city and state does it take place?' %>
    <%#= f.input :rating, placeholder: 'Enter rating' %>
    <%= f.input :activity_address, placeholder: 'Address of the itinerary' %>
    <%= f.input :estimated_time, placeholder: 'Estimated time (optional)' %>
    <%= f.input :estimated_costs, placeholder: 'Does it have any cost?' %>
    <%= f.label :activity_done, "Have you ever taken this tour?" %>
      <%= f.check_box :activity_done %>
    <%= f.label :activity_done, "Share your photos as well!" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.button :submit, "Create" %>
    <%= link_to "Cancel", book_roteiros_path %>
  <% end %>
</div>
