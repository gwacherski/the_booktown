<div class="container">
  <%= simple_form_for([@book, @roteiro]) do |f| %>
    <%= f.input :title, placeholder: 'Give a title for your itinerary' %>
    <%= f.input :location, placeholder: 'What city does it take place?' %>
    <%= f.input :activity_description, placeholder: 'Add a detailed description for the other to enjoy the tour' %>
    <%#= f.input :description, placeholder: 'Enter description' %>
    <%#= f.input :rating, placeholder: 'Enter rating' %>
    <%= f.input :activity_address, placeholder: 'Detailed address (street, number, zip code...)'  %>
    <%= f.input :estimated_time, placeholder: 'Estimated time in hours (optional)' %>
    <%= f.input :estimated_costs, placeholder: 'Does it have any cost? How much?' %>
    <%= f.label :activity_done, "Have you ever taken this tour?" %>
      <%= f.check_box :activity_done %>
    <%= f.label :activity_done, "Share your photos as well!" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.button :submit, "Create" %>
  <%= link_to "Cancel", root_path  %>
  <% end %>

</div>
