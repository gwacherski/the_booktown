<div class="container">
  <%= simple_form_for(@roteiro) do |f| %>
    <%= f.input :description %>
    <%= f.input :author %>
    <%= f.input :location %>
    <%= f.input :rating %>
    <%= f.input :review_id %>
    <%= f.input :title %>
    <%= f.input :activity_description %>
    <%= f.input :activity_address %>
    <%= f.input :estimated_time %>
    <%= f.input :estimated_costs %>
    <%= f.check_box :activity_done %>
    <%= f.button :submit %>
    <%= link_to "Cancel", roteiros_path %>
  <% end %>
</div>
