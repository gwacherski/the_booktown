<div class="productCard_block" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); padding: 20px 20px 10px 20px; background-color: #f4f4f4; display: flex; align-items: flex-start;">
  <div class="productCard_brandBlock" style="margin-right: 20px;">
    <%= image_tag @book.thumbnail, style: "max-width: 150px;" %>
  </div>

  <div style="flex-grow: 1;">
    <h2 class="block_name block_name__mainName" style="margin: 0;"><strong><%= @book.name %></strong></h2>
    <h2 class="block_name block_name__addName" style="margin: 5px 0;"><em>Author: <%= @book.author %></em></h2>

    <div class="productCard_rightSide" style="margin-top: 10px;">
      <strong>Aqui um breve resumo do livro:</strong><br>
      <em><%= @book.description %></em>
    </div>
  </div>
</div>


  <div class="block_product__advantagesProduct">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Roteiros</h3>
      <% if user_signed_in? %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          Novo Roteiro
        </button>
      <% else %>
        <%= link_to "Compartilhe seu roteiro!", new_user_session_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="actions action-buttons" style="padding: 30px;">
    <% if user_signed_in? && current_user.admin? %>
      <%= button_to "Destroy Book", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger action-button" %>
    <% end %>

    <% if user_signed_in? && (current_user.admin? || @book.user == current_user) %>
      <!-- O link de edição abre o modal -->
      <button type="button" class="btn btn-primary action-button" data-bs-toggle="modal" data-bs-target="#editBookModal">
        Edit
      </button>
    <% end %>
  </div>

  <!-- Modal de edição do livro -->
  <div class="modal fade" id="editBookModal" tabindex="-1" role="dialog" aria-labelledby="editBookModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editBookModalLabel">Edit Book</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Aqui será renderizado o formulário de edição do livro -->
          <%= render 'edit', book: @book %>
        </div>
      </div>
    </div>
  </div>

  <div class="box-shadow" style="padding: 30px;">
    <%= render 'shared/roteiro' %>
  </div>
</div>

<!-- Modal para adicionar novo roteiro -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="exampleModalLabel">New Itinarary</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Aqui será renderizado o formulário para adicionar um novo roteiro -->
        <%= render 'roteiros/new', book: @book, roteiro: @roteiro %>
      </div>
    </div>
  </div>
</div>

<!-- Adicione aqui seus scripts JavaScript -->
</body>
</html>
