<div class="container">
  <h1>Welcome to the BookTown!
    <span class="txt-type"></span></h1>
  <h2>Read the city</h2>
</div>

<div class="grid">
  <% @books.order(id: :asc).limit(15).each_slice(3) do |books| %>
    <div class="grid-row">
      <% books.each do |book| %>
        <div class="grid-item">
          <div class="example-2 card" style="width: 300px; padding: 10px;">
            <div class="wrapper" style="background-image: url('<%= book.thumbnail %>');">
              <div class="header">
                <ul class="menu-content">
                  <li>
                    <a href="#" class="fa fa-bookmark-o"></a>
                  </li>
                  <li><a href="#" class="fa fa-heart-o"><span>Read the city!</span></a></li>
                </ul>
              </div>
              <div class="data">
                <div class="content" style="background-color: black;">
                    <span class="author"><p><%= book.author %></p></span>
                    <h1 class="title" style="font-size: smaller; font-weight: bold; font-stretch: wider; color: black;"><a href="<%= book_path(book) %>">
                    <%= book.name %></a></h1>
                    <p class="text"><%= truncate(book.description, length: 90, separator: ' ', omission: '...') %></p>
                    <a href="<%= book_path(book) %>" class="button">Read more</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

<a href="<%= new_book_path %>" class="btn btn-dark">Add New Book</a>
